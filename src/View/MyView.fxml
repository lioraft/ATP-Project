<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <fx:include source="menuBar.fxml" />
   </top>
   <center>
      <VBox alignment="CENTER" prefWidth="826.0" spacing="10">
         <Label fx:id="mainTitle" text="Maze Dimensions:">
            <font>
               <Font size="31.0" />
            </font>
         </Label>
         <HBox alignment="CENTER" spacing="10">
            <Label fx:id="widthTitle" text="Width: ">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox id="width" prefWidth="150.0" />
         </HBox>
         <HBox alignment="CENTER" spacing="10">
            <Label fx:id="heightTitle" text="Height:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox id="height" prefWidth="150.0" />
         </HBox>
         <Button id="start_button" onAction="#handleStartButtonClick" text="Start" />
      </VBox>
   </center>
   <left>
      <ImageView fx:id="bgImage" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
